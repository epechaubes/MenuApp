             xmlns:views="clr-namespace:MenuApp.Views"
             x:Class="MenuApp.Views.MainPage">
    <MasterDetailPage.Master>
        <views:MenuPage/>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <NavigationPage BarBackgroundColor="Gray">
            <x:Arguments>
                <views:HomePage/>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>