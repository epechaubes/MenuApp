<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuApp.Views.LoginPage">
    <StackLayout Margin="20" Spacing="16">
        <Label Text="Login" HorizontalTextAlignment="Center" FontSize="32"></Label>
        <Entry Placeholder="Email" Text="{Binding Email}"></Entry>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"></Entry>
        <Button Command="{Binding LoginCommand}" Text="Login" TextColor="White" BackgroundColor="Green"></Button>
        <Button Command="{Binding NavigateToRegisterPageCommand}" Text="Register" TextColor="White" BackgroundColor="Green"></Button>
        <Button Command = "{Binding DeleteAllUsersCommand}" Text="Delete all users" TextColor="White" BackgroundColor="Red"></Button>
    </StackLayout>
</ContentPage>